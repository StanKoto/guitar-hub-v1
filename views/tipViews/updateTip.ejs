<%- include('../partials/header'); %>
  <form id="contents-form">
    <label for="title">Title</label>
    <textarea name="title" cols="30" rows="1" maxlength="50"><%= tip.title %></textarea>
    <div class="title error"></div>
    <label for="contents">Contents</label>
    <textarea name="contents" cols="30" rows="10" maxlength="5000"><%= tip.contents %></textarea>
    <div class="contents error"></div>
    <br>
    <span>Change tip category (current category: <%= tip.category %>):</span>
    <br>
    <input type="radio" id="category-one" name="category" value="Guitar, strings and accessories choice">
    <label for="category-one">Guitar, strings and accessories choice</label>
    <input type="radio" id="category-two" name="category" value="Care and maintenance">
    <label for="category-two">Care and maintenance</label>
    <input type="radio" id="category-three" name="category" value="Recording and amplification">
    <label for="category-three">Recording and amplification</label>
    <input type="radio" id="category-four" name="category" value="Other topics">
    <label for="category-four">Other topics</label>
    <br>
    <button>Update text contents</button>
  </form>
  <br>
  <form id="image-form">
    <label for="images">Add new images</label>
    <input type="file" id="images" multiple>
    <div class="image error"></div>
    <button>Upload images</button>
  </form>
  <br>
  <% for (const image of tip.images) { %>
    <div>
      <img src="data:image/png;base64,<%= image.toString('base64') %>" alt="Tip image">
      <button class="delete image" id="<%= tip.images.indexOf(image) %>">Delete image</button>
    </div>
  <% } %>
  <br>
  <a href="/tips-overview/tips/<%= tip._id %>/<%= tip.slug %>">Go back to the tip page</a>

  <script type="module" src="/js/tipScripts/updateTip.js"></script>
<%- include('../partials/footer'); %>