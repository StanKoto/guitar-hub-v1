<%- include('../partials/header'); %>
  <ul>
    <li>Username: <%= user.username %></li>
    <li>Email: <%= user.email %></li>
    <li>Posts published: <%= user.postCount %> </li>
    <li>Status: <%= user.status %></li>
    <li>Role: <%= user.role %></li>
  </ul>
  <br>
  <a href="/posts?author=<%= user._id %>">View all user's posts</a>
  <br>
  <span>
    <a href="/ratings?reviewer=<%= user._id %>">View all given ratings</a>
    <a href="/ratings?recipient=<%= user._id %>">View all received ratings</a>
  </span>
  <br><br>
  <a href="/users/<%= user._id %>/<%= user.slug %>/update-user">Update user</a>
  <button id="delete-user">Delete user</button>

  <script type="module" src="/js/userScripts/deleteUser.js"></script>
<%- include('../partials/footer'); %>